{
  "name": "perfectgenerations-backend",
  "version": "1.0.0",
  "description": "Backend for Perfect Generations",
  "main": "dist/main.js",
  "type": "commonjs",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build && cp -r src/template/templates dist/template/",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "seed": "ts-node -r tsconfig-paths/register src/seeds/seeder.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:brand-limits": "ts-node -r tsconfig-paths/register tools/test-brand-limits.ts",
    "test:template-limits": "ts-node -r tsconfig-paths/register tools/test-template-limits.ts",
    "create-admin": "ts-node -r tsconfig-paths/register tools/create-admin-user.ts",
    "add-templates": "ts-node -r tsconfig-paths/register tools/add-templates.ts",
    "add-templates-json": "ts-node -r tsconfig-paths/register tools/add-templates-from-json.ts",
    "add-testimonial": "ts-node -r tsconfig-paths/register tools/add-testimonial-template.ts",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js",
    "migration:generate": "npm run typeorm -- migration:generate -d src/config/typeorm.config.ts",
    "migration:run": "npm run typeorm migration:run -- -d src/config/typeorm.config.ts",
    "migration:revert": "npm run typeorm migration:revert -- -d src/config/typeorm.config.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@adminjs/design-system": "^4.1.1",
    "@adminjs/express": "^6.1.1",
    "@adminjs/nestjs": "^6.1.0",
    "@adminjs/typeorm": "^5.0.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.1.17",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/typeorm": "^10.0.1",
    "adminjs": "^7.8.16",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "express-formidable": "^1.2.0",
    "express-session": "^1.18.1",
    "glob": "^10.3.10",
    "handlebars": "^4.7.8",
    "monaco-editor": "^0.52.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.11.3",
    "puppeteer": "^21.5.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.5",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.17",
    "vue-monaco-editor": "^0.0.19",
    "winston": "^3.11.0",
    "helmet": "^7.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/axios": "^0.9.36",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.3.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  }
}
